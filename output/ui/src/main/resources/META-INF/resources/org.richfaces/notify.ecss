.rf-ntf-info .rf-ntf-ic {
    display: block;
    background-image: "url(#{resource['org.richfaces:info.png']})";
}

.rf-ntf-warn .rf-ntf-ic {
    display: block;
    background-image: "url(#{resource['org.richfaces:warning.png']})";
}

.rf-ntf-error .rf-ntf-ic {
    display: block;
    background-image: "url(#{resource['org.richfaces:error.png']})";
}

.rf-ntf-fatal .rf-ntf-ic {
    display: block;
    background-image: "url(#{resource['org.richfaces:fatal.png']})";
}

.rf-ntf-pos-topLeft {
    bottom: auto;
    left: 10px;
    top: 10px;
    right: auto;
}

.rf-ntf-pos-topRight {
    bottom: auto;
    right: 10px;
    top: 10px;
    left: auto;
}

.rf-ntf-pos-bottomLeft {
    bottom: 10px;
    left: 10px;
    top: auto;
    right: auto;
}

.rf-ntf-pos-bottomRight {
    bottom: 10px;
    right: 10px;
    top: auto;
    left: auto;
}